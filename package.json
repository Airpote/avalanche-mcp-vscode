{
  "name": "avalanche-mcp",
  "displayName": "Avalanche AVAX MCP",
  "description": "AVAX MCP Server for VS Code - Search Avalanche blockchain docs, build on Avalanche L1s with AI assistance. Source: https://github.com/Airpote/avalanche-mcp-vscode",
  "version": "1.0.7",
  "publisher": "amichain",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Airpote/avalanche-mcp-vscode"
  },
  "bugs": {
    "url": "https://github.com/Airpote/avalanche-mcp-vscode/issues"
  },
  "homepage": "https://build.avax.network/docs/tooling/ai-llm",
  "license": "MIT",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "AI",
    "Other"
  ],
  "keywords": [
    "avalanche",
    "avax",
    "blockchain",
    "mcp",
    "model-context-protocol",
    "ai",
    "llm",
    "copilot",
    "documentation",
    "web3",
    "crypto",
    "l1",
    "layer1"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "mcpServers": {
      "avalanche-docs": {
        "type": "http",
        "url": "https://build.avax.network/api/mcp",
        "name": "Avalanche Documentation"
      }
    },
    "commands": [
      {
        "command": "avalanche-mcp.showInfo",
        "title": "Avalanche MCP: Show Info"
      },
      {
        "command": "avalanche-mcp.configure",
        "title": "Avalanche MCP: Configure Server"
      }
    ]
  },
  "extensionDependencies": [],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "echo 'No compilation needed'",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.22.0"
  }
}
